<body>
    <h2>게시판 내용</h2>
    <form action="/board/listUpdateP" method="post">
    <table class = "table">
        <tr>
            <td>seq: </td>
            <td><input type="text" name="seq" id="seq" value="<%=row.seq%>"></td>
        </tr>
        <tr>
            <td>작성자: </td>
            <td><input type="text" name="writer" id="writer" value="<%=row.writer%>"></td>
        </tr>
        <tr>
            <td>제목: </td>
            <td><input type="text" name="title" id="title" value="<%=row.title%>" size="30" required></td>
        </tr>
        <tr>
            <td>내용: </td>
            <td><textarea name="content" id="content" cols="80" rows="20" required><%=row.content%></textarea></td>
        </tr>
        <tr>
            <td>날자: </td>
            <td><input type="text" name="date" id="date" value="<%=row.date%>" size="50" required></td>
        </tr>
        <tr>
            <td>조회수: </td>
            <td><%=row.views%></td>
        </tr>
        <tr>
            <td colspan = "2">
                <button type="submit" onclick="location.href='/board/listUpdateP'">수정</button>
                <a href = "/board/page/1">리스트</a>
            </td>
        </tr>
    </table>
    </form>
